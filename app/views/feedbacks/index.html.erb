<p id="notice"><%= notice %></p>

<h1>Обращения</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ФИО</th>
      <th>Email</th>
      <th>Тема письма</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.full_name %></td>
        <td><%= feedback.email %></td>
        <td><%= feedback.theme %></td>
        <td><%= link_to 'Просмотр', feedback, :class => "btn-mini btn-more" %></td>
        <td><%= link_to 'Изменить', edit_feedback_path(feedback), :class => "btn-mini btn-edit" %></td>
        <td><%= link_to 'Удалить', feedback, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-mini btn-delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

